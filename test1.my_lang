# ТЕСТ 3: Умовна конструкція if-else
# Очікується: 1
# ============================================================
x1 <- 5
if (x1 > 0) {
    result1 <- 1
} else {
    result1 <- -1
}
print(result1)

# ============================================================
# ТЕСТ 4: Цикл while
# Очікується: 15
# ============================================================
i <- 1
sum1 <- 0
while (i <= 5) {
    sum1 <- sum1 + i
    i <- i + 1
}
print(sum1)

# ============================================================
# ТЕСТ 5: Складна програма (while + if)
# Очікується: 5
# ============================================================
n <- 3
sum2 <- 0
j <- 1
while (j <= n) {
    if (j > 1) {
        sum2 <- sum2 + j
    }
    j <- j + 1
}
print(sum2)

